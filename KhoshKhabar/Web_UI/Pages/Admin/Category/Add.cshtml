@page
@model Web_UI.Pages.Admin.Category.AddModel
@{
    Layout = "_Layout";
}
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <p class="card-header text-center">افزودن دسته بندی جدید</p>
                </div>
                <div class="card-body">
                    <div class="container">

                        <form asp-page="Add" method="post">
                            <div class="row">
                                <div class="col-6">
                                    <input type="text" asp-for="Category.Title" placeholder="عنوان دسته بندی" />
                                    <span asp-validation-for="Category.Title" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary">ثبت</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>