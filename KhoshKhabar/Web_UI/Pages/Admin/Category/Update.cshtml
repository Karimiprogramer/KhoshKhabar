@page
@model Web_UI.Pages.Admin.Category.UpdateModel
@{
    Layout = "_Layout";
}
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-header">
                    <p class="card-header text-center">ویرایش دسته یندی @Model.Category.Title</p>
                </div>
                <div class="card-body">
                    <div class="container">

                        <form asp-page="Update" method="post">
                            <div class="row">
                                <div class="col-6">
                                    <p>عنوان دسته بندی :</p>
                                    <input type="text" asp-for="Category.Title" placeholder="@Model.Category.Title" />
                                    <input type="hidden" asp-for="Category.ID" />
                                    <span asp-validation-for="Category.Title"></span>
                                </div>
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary">ثبت</button>
                                    <a class="btn btn-warning" asp-page="Index"> انصراف</a>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>